            prompt "Authentication Option of Radio Parameters"
            default CE_SUPPORT

            config CE_SUPPORT
            bool "CE Authentication"

            config FCC_SUPPORT
            bool "FCC Authentication"

            config MAX_POWER_SUPPORT
            bool "Max Power"
        endchoice

        config MESH_SUPPORT
